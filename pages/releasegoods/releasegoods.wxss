.top-sort {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0rpx;
  right: 0rpx;
}

.top-sort>view {
  width: 25%;
  height: 80rpx;
  display: inline-block;
  background-color: #f5f5f5;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  background-image: url('/resources/images/icon_sort-san-jiao.png');
  background-repeat: no-repeat;
  background-position: 50% 50rpx;
  background-size: 40rpx 40rpx;
}

